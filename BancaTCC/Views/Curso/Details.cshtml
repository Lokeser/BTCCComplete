@model Curso

@{
    ViewData["Title"] = "Detalhes do Curso";
}

<h1>Detalhes do Curso</h1>

<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Area)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Area)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CargaHoraria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CargaHoraria)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AutorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AutorId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProfessorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProfessorId)
        </dd>
    </dl>
</div>

<div>
    <h4>Alunos Matriculados</h4>
    @if (Model.Autores != null && Model.Autores.Any())
    {
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Matrícula</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var aluno in Model.Autores)
                {
                    <tr>
                        <td>@aluno.Nome</td>
                        <td>@aluno.Matricula</td>
                        <td>@aluno.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">Não há alunos matriculados neste curso.</p>
    }
</div>

<div>
    <h4>Professores Lecionando</h4>
    @if (Model.Professores != null && Model.Professores.Any())
    {
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var professor in Model.Professores)
                {
                    <tr>
                        <td>@professor.Nome</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">Sem professores lecionando.</p>
    }
</div>



<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-info">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bookmark-plus" viewBox="0 0 16 16">
            <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.777.416L8 13.101l-5.223 2.815A.5.5 0 0 1 2 15.5zm2-1a1 1 0 0 0-1 1v12.566l4.723-2.482a.5.5 0 0 1 .554 0L13 14.566V2a1 1 0 0 0-1-1z" />
            <path d="M8 4a.5.5 0 0 1 .5.5V6H10a.5.5 0 0 1 0 1H8.5v1.5a.5.5 0 0 1-1 0V7H6a.5.5 0 0 1 0-1h1.5V4.5A.5.5 0 0 1 8 4" />
        </svg> Editar
    </a> |
    <a asp-action="Index" asp-route-id="@Model?.Id" class="btn btn-white btn-sm">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-down-square-fill" viewBox="0 0 16 16">
            <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm4 4a.5.5 0 0 0-.374.832l4 4.5a.5.5 0 0 0 .748 0l4-4.5A.5.5 0 0 0 12 6z" />
        </svg> Voltar à Lista
    </a>
</div>