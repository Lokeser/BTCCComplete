@model BancaTCC.Models.Banca

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Banca</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" type="datetime-local" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoraInicio">Hora de Início</label>
                <input asp-for="HoraInicio" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="HoraFim">Hora de Fim</label>
                <input asp-for="HoraFim" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Resultado">Resultado</label>
                <input asp-for="Resultado" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Observacoes">Observações</label>
                <textarea asp-for="Observacoes" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="TrabalhoId" class="control-label">Escolha um Trabalho</label>
                <select asp-for="TrabalhoId" class="form-control" asp-items="ViewBag.TrabalhoId"></select>
                <span asp-validation-for="TrabalhoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label for="Professores">Selecione até 3 professores</label>
                    <div>
                        @foreach (var professor in ViewBag.Professores)
                        {
                            <div>
                                <input type="checkbox" name="professoresSelecionados" value="@professor.Id" />
                                <label>@professor.Nome</label>
                            </div>
                        }
                    </div>
                <div class="form-group">
                    <label for="MembrosExterior">Convidados</label>
                    <div>
                        @foreach (var membro in ViewBag.MembrosExterior as List<BancaTCC.Models.MembroExterior>)
                        {
                            <div>
                                <input type="checkbox" name="membrosExteriorSelecionados" value="@membro.Id" />
                                <label>@membro.Nome</label>
                            </div>
                        }
                    </div>

                    <!-- Exibe a mensagem de erro, caso haja -->
                    <div class="text-danger">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>

                    <!-- Exibe a mensagem de erro, caso haja -->
                    <div class="text-danger">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <div class="form-group">
        <button type="submit" asp-route-id="@Model?.Id" class="btn btn-info">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bookmark-plus-fill" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M2 15.5V2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v13.5a.5.5 0 0 1-.74.439L8 13.069l-5.26 2.87A.5.5 0 0 1 2 15.5m6.5-11a.5.5 0 0 0-1 0V6H6a.5.5 0 0 0 0 1h1.5v1.5a.5.5 0 0 0 1 0V7H10a.5.5 0 0 0 0-1H8.5z" />
            </svg> Salvar
        </button>
        | <a asp-action="Index" asp-route-id="@Model?.Id" class="btn btn-white btn-sm">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-down-square-fill" viewBox="0 0 16 16">
                <path d="M0 2a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm4 4a.5.5 0 0 0-.374.832l4 4.5a.5.5 0 0 0 .748 0l4-4.5A.5.5 0 0 0 12 6z" />
            </svg> Voltar á Lista
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
