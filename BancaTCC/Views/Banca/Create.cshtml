@model BancaTCC.Models.Banca

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Banca</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <!-- Outros campos do modelo Banca -->
            <div class="form-group">
                <label asp-for="Data">Data</label>
                <input asp-for="Data" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="HoraInicio">Hora de Início</label>
                <input asp-for="HoraInicio" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="HoraFim">Hora de Fim</label>
                <input asp-for="HoraFim" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Resultado">Resultado</label>
                <input asp-for="Resultado" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Observacoes">Observações</label>
                <textarea asp-for="Observacoes" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="TrabalhoId" class="control-label">Escolha um Trabalho</label>
                <select asp-for="TrabalhoId" class="form-control" asp-items="ViewBag.TrabalhoId"></select>
                <span asp-validation-for="TrabalhoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Professores">Selecione até 3 professores</label>
                <div>
                    @foreach (var professor in ViewBag.Professores)
                    {
                        <div>
                            <input type="checkbox" name="professoresSelecionados" value="@professor.Id" />
                            <label>@professor.Nome</label>
                        </div>
                    }
                </div>

                <!-- Exibe a mensagem de erro, caso haja -->
                <div class="text-danger">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="MembrosExterior">Convidados</label>
                <div>
                    @foreach (var membro in ViewBag.MembrosExterior as List<BancaTCC.Models.MembroExterior>)
                    {
                        <div>
                            <input type="checkbox" name="membrosExteriorSelecionados" value="@membro.Id" />
                            <label>@membro.Nome</label>
                        </div>
                    }
                </div>

                <!-- Exibe a mensagem de erro, caso haja -->
                <div class="text-danger">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
